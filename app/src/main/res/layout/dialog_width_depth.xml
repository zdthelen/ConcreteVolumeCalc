<!-- res/layout/dialog_width_depth.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/inputWidth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Width (inches)"
        android:inputType="number"/>

    <EditText
        android:id="@+id/inputDepth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Depth (inches)"
        android:inputType="number"/>

    <Button
        android:id="@+id/buttonSaveWidthDepth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"/>

    <Button
        android:id="@+id/buttonCancelWidthDepth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"/>
</LinearLayout>
